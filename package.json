{
  "name": "notification-service",
  "version": "1.0.0",
  "description": "Microservicio de notificaciones para sistema bancario distribuido",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "nodemon scripts/test-local.js",
    "build": "echo 'Building lambdas...' && npm run build:send-notifications && npm run build:error-handler",
    "build:send-notifications": "cd src/lambdas/send-notifications && npm install --production",
    "build:error-handler": "cd src/lambdas/send-notifications-error && npm install --production",
    "deploy:dev": "bash scripts/deploy.sh dev",
    "deploy:prod": "bash scripts/deploy.sh prod",
    "upload-templates": "bash scripts/upload-templates.sh",
    "terraform:init": "cd infrastructure/terraform && terraform init",
    "terraform:plan": "cd infrastructure/terraform && terraform plan",
    "terraform:apply": "cd infrastructure/terraform && terraform apply",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "aws",
    "lambda",
    "sqs",
    "dynamodb",
    "notifications",
    "banking",
    "microservice"
  ],
  "author": "Inferno Bank Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.490.0",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/client-ses": "^3.490.0",
    "@aws-sdk/client-sqs": "^3.490.0",
    "@aws-sdk/lib-dynamodb": "^3.490.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**"
    ]
  }
}
